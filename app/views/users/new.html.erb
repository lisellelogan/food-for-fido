<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
            <% @user.errors.each do |error| %>
