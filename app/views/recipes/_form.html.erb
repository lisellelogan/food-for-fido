<%= form_for(@recipe) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>
    <%= f.label :cook_time %>
    <%= f.number_field :cook_time %> mins.
    <br><br>
    <%= f.label :servings %>
    <%= f.number_field :servings %>
    <br><br>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <br><br>
    <%= f.label :directions %>
    <%= f.text_area :directions %>
    <br><br>
    <%= f.submit "All Done"%>

<% end %>