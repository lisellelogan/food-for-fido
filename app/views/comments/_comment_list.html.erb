<% comments.each do |comment| %>
    <h3><%= link_to comment.user.name, user_path(comment.user) %></h3>
    <p>
        Rating: <%= comment.rating %>
        <br>
        Comment: <%= comment.content %>
        <br>
        <%= display_time(comment.created_at) %>
    <p>

    <%= link_to("Edit", edit_comment_path(comment.recipe, comment)) if logged_in? && current_user == comment.user %>
<% end %>